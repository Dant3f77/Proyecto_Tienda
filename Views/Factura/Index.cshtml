@model IEnumerable<Proyecto_Tienda.Models.Factura>
@{
    ViewBag.Title = "Index";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">

    <title>Index</title>
</head>
<body>
    <table class="table">
       

        @foreach (var factura in Model)
        {
            <tr>
                
                <td>
                    @foreach (var cliente in @ViewBag.clientes)
                    {
                        if (@factura.IdCliente == cliente.Id)
                        {

                            @cliente.Nombre
                        }
                    }
                    
                </td>
                <td>
                    @factura.Fecha
                </td>
                <td>
                    @factura.TipoPago
                </td>
                <td>
                    @factura.TipoFactura
                </td>
                <td>
                    @foreach (var usuario in ViewBag.usuario)
                    {
                        if (@factura.IdVendedor == usuario.Id)
                        {

                            @usuario.User
                        }
                    }
                    
                </td>
                <td>
                    @factura.IdSucursal
                </td>

                <td>
                    <a href="/Factura/Details?IdFactura=@factura.IdFactura">Ver Factura</a> -
                    <a href="/Factura/Baja?IdFactuta=@factura.IdFactura">Borrar</a>
                </td>
            </tr>
        }

    </table>
    <a href="/Factura/Creacion">Agregar</a>
</body>
</html>
