@model Proyecto_Tienda.Models.Usuario
@{
    ViewBag.Title = "Modificacion";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Alta</title>
</head>
<body>
    <div>

        <form method="post" action="/Usuario/Modificacion">

            <br />
            <label class="m-1">
                Id:
                <input type="text" name="Id" value="@Model.Id" />
            </label>
            
            <br />
            <label class="m-1">
                Usuario:
            </label>
            <input type="text" name="Usuario" value="@Model.User" />
            <br />
            <label class="m-1">
                Contraseña:
                <input type="text" name="Contraseña" value="@Model.Contraseña" />
            </label>
            
            <br />
            <label class="m-1">
                IdArea:
                <input type="text" name="IdArea" value="@Model.IdArea" />
            </label>
            
            <br />
            <label class="m-1">
                IdTienda:
                <input type="text" name="IdTienda" value="@Model.IdTienda" />
            </label>
            
            <br />
            <input class="btn btn-success" type="submit" value="Confirmar" />
        </form>
    </div>
</body>
</html>
